<%= link_to "全記事表示", articles_path %>
<% @categories.each do |category| %>
  <%= link_to "#{category.name}の記事だけ表示", articles_path(category_id: category.id)  %>
<% end %>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>カテゴリー</th>
    <th>ライター</th>
    <th></th>
    <th></th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to "#{article.title}", article_path(article) %></td>
      <td><%= simple_format(article.body) %></td>
      <td><%= article.category_name %></td>
      <td><%= link_to "#{article.user_name}", user_path(article.user_id), method: :delete, data: { confirm: "#{article.user_name}を削除しますか？" }   %></td>
      <td><%= link_to '編集', root_path %></td>
      <td><%= link_to '削除', article_path(article), method: :delete, data: { confirm: "#{article.title}を削除しますか？" } %></td>
    </tr>
  <% end %>
</table>
